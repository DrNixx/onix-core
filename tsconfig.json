{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES6",
        "lib": ["DOM", "ES6"],
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "outDir": "./dist"
    },
    "files": [
        "src/index.ts"
    ]
}